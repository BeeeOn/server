CC := /usr/bin/g++
CPP_FILES := $(wildcard src/*.cpp)
OBJ_FILES := $(addprefix obj/, $(notdir $(CPP_FILES:.cpp=.o)))

CC_FLAGS := -std=c++11 -pthread -rdynamic -Wextra -pedantic
I_DIRS := -I/usr/include/soci -I/usr/pgsql-9.5/include

LD_FLAGS := -lsoci_core -lsoci_empty -lsoci_postgresql -ldl -lpq
L_DIRS := -L/usr/local/lib64 -L/usr/pgsql-9.5/lib

all: pre-build baf

pre-build:
	mkdir -p ./obj

baf: $(OBJ_FILES)
	$(CC) -o $@ $^ $(L_DIRS) $(LD_FLAGS)

obj/%.o: src/%.cpp
	$(CC) -c -o $@ $< $(I_DIRS) $(CC_FLAGS)

clean:
	rm -rf ./obj