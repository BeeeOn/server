CC := g++
CPP_FILES := $(wildcard src/*.cpp)
OBJ_FILES := $(addprefix obj/, $(notdir $(CPP_FILES:.cpp=.o)))

CC_FLAGS := -std=c++11 -pthread -rdynamic
I_DIRS := -I../lib -I/usr/local/include/soci -I/usr/include/postgresql

LD_FLAGS := -lsoci_core -lsoci_empty -lsoci_postgresql -ldl -lpq
L_DIRS := -L/usr/local/lib64 -L/usr/lib/postgresql/9.3/lib

.PHONY: all clean

all: pre-build baf

pre-build:
	mkdir -p ./obj

baf: $(OBJ_FILES)
	$(CC) $(CC_FLAGS) -o $@ $^ $(L_DIRS) $(LD_FLAGS)

obj/%.o: src/%.cpp
	$(CC) $(CC_FLAGS) -c -o $@ $< $(I_DIRS) 

clean:
	rm -rf ./obj