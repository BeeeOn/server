<?xml version="1.0" encoding="UTF-8"?>
<project name="emulator_server" default="all">
  
  
  <property file="emulator_server.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.dom4j-2.0.0-alpha-2.classpath">
    <pathelement location="${basedir}/resources/dom4j-2.0.0-ALPHA-2.jar"/>
  </path>
  
  <path id="library.log4j-api-2.1.classpath">
    <pathelement location="${basedir}/resources/log4j-api-2.1.jar"/>
  </path>
  
  <path id="library.log4j-core-2.1.classpath">
    <pathelement location="${basedir}/resources/log4j-core-2.1.jar"/>
  </path>
  
  <path id="library.postgresql-9.3-1102.jdbc41.classpath">
    <pathelement location="${basedir}/resources/postgresql-9.3-1102.jdbc41.jar"/>
  </path>
  
  <!-- Modules -->
  
  
  <!-- Module emulator_server -->
  
  <dirname property="module.emulator_server.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.emulator_server" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.emulator_server" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.emulator_server" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.emulator_server" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="emulator_server.output.dir" value="${module.emulator_server.basedir}/out/production/emulator_server"/>
  <property name="emulator_server.testoutput.dir" value="${module.emulator_server.basedir}/out/test/emulator_server"/>
  
  <path id="emulator_server.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="emulator_server.module.production.classpath">
    <path refid="${module.jdk.classpath.emulator_server}"/>
    <path refid="library.log4j-core-2.1.classpath"/>
    <path refid="library.log4j-api-2.1.classpath"/>
    <path refid="library.dom4j-2.0.0-alpha-2.classpath"/>
    <path refid="library.postgresql-9.3-1102.jdbc41.classpath"/>
  </path>
  
  <path id="emulator_server.runtime.production.module.classpath">
    <pathelement location="${emulator_server.output.dir}"/>
    <path refid="library.log4j-core-2.1.classpath"/>
    <path refid="library.log4j-api-2.1.classpath"/>
    <path refid="library.dom4j-2.0.0-alpha-2.classpath"/>
    <path refid="library.postgresql-9.3-1102.jdbc41.classpath"/>
  </path>
  
  <path id="emulator_server.module.classpath">
    <path refid="${module.jdk.classpath.emulator_server}"/>
    <pathelement location="${emulator_server.output.dir}"/>
    <path refid="library.log4j-core-2.1.classpath"/>
    <path refid="library.log4j-api-2.1.classpath"/>
    <path refid="library.dom4j-2.0.0-alpha-2.classpath"/>
    <path refid="library.postgresql-9.3-1102.jdbc41.classpath"/>
  </path>
  
  <path id="emulator_server.runtime.module.classpath">
    <pathelement location="${emulator_server.testoutput.dir}"/>
    <pathelement location="${emulator_server.output.dir}"/>
    <path refid="library.log4j-core-2.1.classpath"/>
    <path refid="library.log4j-api-2.1.classpath"/>
    <path refid="library.dom4j-2.0.0-alpha-2.classpath"/>
    <path refid="library.postgresql-9.3-1102.jdbc41.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.emulator_server">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.emulator_server">
    <patternset refid="excluded.from.module.emulator_server"/>
  </patternset>
  
  <path id="emulator_server.module.sourcepath">
    <dirset dir="${module.emulator_server.basedir}">
      <include name="src"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.emulator_server" depends="compile.module.emulator_server.production,compile.module.emulator_server.tests" description="Compile module emulator_server"/>
  
  <target name="compile.module.emulator_server.production" description="Compile module emulator_server; production classes">
    <mkdir dir="${emulator_server.output.dir}"/>
    <javac destdir="${emulator_server.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.emulator_server}/javac">
      <compilerarg line="${compiler.args.emulator_server}"/>
      <bootclasspath refid="emulator_server.module.bootclasspath"/>
      <classpath refid="emulator_server.module.production.classpath"/>
      <src refid="emulator_server.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.emulator_server"/>
    </javac>
    
    <copy todir="${emulator_server.output.dir}">
      <fileset dir="${module.emulator_server.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.emulator_server.basedir}/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.emulator_server.tests" depends="compile.module.emulator_server.production" description="compile module emulator_server; test classes" unless="skip.tests"/>
  
  <target name="clean.module.emulator_server" description="cleanup module">
    <delete dir="${emulator_server.output.dir}"/>
    <delete dir="${emulator_server.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.emulator_server, clean.artifact.emulator_server:jar" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.emulator_server" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.emulator_server:jar" value="${basedir}/out/artifacts/emulator_server_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.emulator_server.jar" value="${artifacts.temp.dir}/emulator_server.jar"/>
  </target>
  
  <target name="clean.artifact.emulator_server:jar" description="clean emulator_server:jar artifact output">
    <delete dir="${artifact.output.emulator_server:jar}"/>
  </target>
  
  <target name="artifact.emulator_server:jar" depends="init.artifacts, compile.module.emulator_server" description="Build &#39;emulator_server:jar&#39; artifact">
    <mkdir dir="${artifact.output.emulator_server:jar}"/>
    <jar destfile="${temp.jar.path.emulator_server.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${emulator_server.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.emulator_server.jar}" tofile="${artifact.output.emulator_server:jar}/emulator_server.jar"/>
    <mkdir dir="${artifact.output.emulator_server:jar}/lib"/>
    <copy file="${basedir}/resources/log4j-api-2.1.jar" tofile="${artifact.output.emulator_server:jar}/lib/log4j-api-2.1.jar"/>
    <copy file="${basedir}/resources/log4j-core-2.1.jar" tofile="${artifact.output.emulator_server:jar}/lib/log4j-core-2.1.jar"/>
    <copy file="${basedir}/resources/dom4j-2.0.0-ALPHA-2.jar" tofile="${artifact.output.emulator_server:jar}/lib/dom4j-2.0.0-ALPHA-2.jar"/>
    <copy file="${basedir}/resources/postgresql-9.3-1102.jdbc41.jar" tofile="${artifact.output.emulator_server:jar}/lib/postgresql-9.3-1102.jdbc41.jar"/>
    <copy file="${basedir}/server.properties" tofile="${artifact.output.emulator_server:jar}/server.properties"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.emulator_server:jar" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>