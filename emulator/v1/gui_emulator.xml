<?xml version="1.0" encoding="UTF-8"?>
<project name="smarthomeemulator" default="all">
  
  
  <property file="gui_emulator.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.dom4j-2.0.0-alpha-2.classpath">
    <pathelement location="${basedir}/lib/dom4j-2.0.0-ALPHA-2.jar"/>
  </path>
  
  <path id="library.intellij_forms_rt.classpath">
    <pathelement location="${basedir}/lib/dom4j-2.0.0-ALPHA-2.jar"/>
    <pathelement location="${basedir}/lib/intellij_forms_rt.jar"/>
    <pathelement location="${basedir}/lib/jcommon-1.0.21.jar"/>
    <pathelement location="${basedir}/lib/jfreechart-1.0.17.jar"/>
  </path>
  
  <!-- Modules -->
  
  
  <!-- Module SmartHomeEmulator -->
  
  <dirname property="module.smarthomeemulator.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.smarthomeemulator" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.smarthomeemulator" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.smarthomeemulator" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.smarthomeemulator" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="smarthomeemulator.output.dir" value="${module.smarthomeemulator.basedir}/out/production/SmartHomeEmulator"/>
  <property name="smarthomeemulator.testoutput.dir" value="${module.smarthomeemulator.basedir}/out/test/SmartHomeEmulator"/>
  
  <path id="smarthomeemulator.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="smarthomeemulator.module.production.classpath">
    <path refid="${module.jdk.classpath.smarthomeemulator}"/>
    <path refid="library.intellij_forms_rt.classpath"/>
    <path refid="library.dom4j-2.0.0-alpha-2.classpath"/>
  </path>
  
  <path id="smarthomeemulator.runtime.production.module.classpath">
    <pathelement location="${smarthomeemulator.output.dir}"/>
    <path refid="library.intellij_forms_rt.classpath"/>
    <path refid="library.dom4j-2.0.0-alpha-2.classpath"/>
  </path>
  
  <path id="smarthomeemulator.module.classpath">
    <path refid="${module.jdk.classpath.smarthomeemulator}"/>
    <pathelement location="${smarthomeemulator.output.dir}"/>
    <path refid="library.intellij_forms_rt.classpath"/>
    <path refid="library.dom4j-2.0.0-alpha-2.classpath"/>
  </path>
  
  <path id="smarthomeemulator.runtime.module.classpath">
    <pathelement location="${smarthomeemulator.testoutput.dir}"/>
    <pathelement location="${smarthomeemulator.output.dir}"/>
    <path refid="library.intellij_forms_rt.classpath"/>
    <path refid="library.dom4j-2.0.0-alpha-2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.smarthomeemulator">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.smarthomeemulator">
    <patternset refid="excluded.from.module.smarthomeemulator"/>
  </patternset>
  
  <path id="smarthomeemulator.module.sourcepath">
    <dirset dir="${module.smarthomeemulator.basedir}">
      <include name="src"/>
      <include name="lib"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.smarthomeemulator" depends="compile.module.smarthomeemulator.production,compile.module.smarthomeemulator.tests" description="Compile module SmartHomeEmulator"/>
  
  <target name="compile.module.smarthomeemulator.production" description="Compile module SmartHomeEmulator; production classes">
    <mkdir dir="${smarthomeemulator.output.dir}"/>
    <javac destdir="${smarthomeemulator.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.smarthomeemulator}/javac">
      <compilerarg line="${compiler.args.smarthomeemulator}"/>
      <bootclasspath refid="smarthomeemulator.module.bootclasspath"/>
      <classpath refid="smarthomeemulator.module.production.classpath"/>
      <src refid="smarthomeemulator.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.smarthomeemulator"/>
    </javac>
    
    <copy todir="${smarthomeemulator.output.dir}">
      <fileset dir="${module.smarthomeemulator.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.smarthomeemulator.basedir}/lib">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.smarthomeemulator.tests" depends="compile.module.smarthomeemulator.production" description="compile module SmartHomeEmulator; test classes" unless="skip.tests"/>
  
  <target name="clean.module.smarthomeemulator" description="cleanup module">
    <delete dir="${smarthomeemulator.output.dir}"/>
    <delete dir="${smarthomeemulator.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.smarthomeemulator" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.smarthomeemulator" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.smarthomeemulator:jar" value="${basedir}/out/artifacts/SmartHomeEmulator_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.SmartHomeEmulator.jar" value="${artifacts.temp.dir}/SmartHomeEmulator.jar"/>
  </target>
  
  <target name="artifact.smarthomeemulator:jar" depends="init.artifacts, compile.module.smarthomeemulator" description="Build &#39;SmartHomeEmulator:jar&#39; artifact">
    <property name="artifact.temp.output.smarthomeemulator:jar" value="${artifacts.temp.dir}/SmartHomeEmulator_jar"/>
    <mkdir dir="${artifact.temp.output.smarthomeemulator:jar}"/>
    <jar destfile="${temp.jar.path.SmartHomeEmulator.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${smarthomeemulator.output.dir}"/>
      <zipfileset src="${basedir}/lib/intellij_forms_rt.jar"/>
      <zipfileset src="${basedir}/lib/jcommon-1.0.21.jar"/>
      <zipfileset src="${basedir}/lib/jfreechart-1.0.17.jar"/>
      <zipfileset src="${basedir}/lib/dom4j-2.0.0-ALPHA-2.jar"/>
    </jar>
    <copy file="${temp.jar.path.SmartHomeEmulator.jar}" tofile="${artifact.temp.output.smarthomeemulator:jar}/SmartHomeEmulator.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.smarthomeemulator:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.smarthomeemulator:jar}"/>
    <copy todir="${artifact.output.smarthomeemulator:jar}">
      <fileset dir="${artifact.temp.output.smarthomeemulator:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>